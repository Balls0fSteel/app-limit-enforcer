<Window x:Class="AppLimitEnforcer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppLimitEnforcer"
        mc:Ignorable="d"
        Title="App Limit Enforcer" Height="550" Width="700"
        WindowStartupLocation="CenterScreen"
        Closing="Window_Closing">
    <Window.Resources>
        <Style TargetType="Button" x:Key="PrimaryButton">
            <Setter Property="Background" Value="#0078D4"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
        <Style TargetType="Button" x:Key="DangerButton">
            <Setter Property="Background" Value="#D13438"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="App Limit Enforcer" FontSize="24" FontWeight="Bold"/>
            <TextBlock Text="Manage time limits for applications" Foreground="Gray"/>
        </StackPanel>

        <!-- App List -->
        <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="1" CornerRadius="4">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- List Header -->
                <Border Grid.Row="0" Background="#F5F5F5" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Application" FontWeight="SemiBold"/>
                        <TextBlock Grid.Column="1" Text="Limit" FontWeight="SemiBold" TextAlignment="Center"/>
                        <TextBlock Grid.Column="2" Text="Used Today" FontWeight="SemiBold" TextAlignment="Center"/>
                        <TextBlock Grid.Column="3" Text="Enabled" FontWeight="SemiBold" TextAlignment="Center"/>
                        <TextBlock Grid.Column="4" Text="Actions" FontWeight="SemiBold" TextAlignment="Center"/>
                    </Grid>
                </Border>

                <!-- List Items -->
                <ListBox Grid.Row="1" x:Name="RulesListBox" BorderThickness="0" 
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="5,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding DisplayName}" FontWeight="SemiBold"/>
                                    <TextBlock Text="{Binding ProcessNameOrPath}" Foreground="Gray" FontSize="11"/>
                                </StackPanel>
                                <TextBlock Grid.Column="1" Text="{Binding LimitDisplay}" 
                                           VerticalAlignment="Center" TextAlignment="Center"/>
                                <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding UsageDisplay}" TextAlignment="Center"/>
                                    <ProgressBar Height="4" Minimum="0" Maximum="100" 
                                                 Value="{Binding UsagePercent}" Margin="5,3,5,0"/>
                                </StackPanel>
                                <CheckBox Grid.Column="3" IsChecked="{Binding IsEnabled}" 
                                          HorizontalAlignment="Center" VerticalAlignment="Center"
                                          Click="EnabledCheckBox_Click"/>
                                <Button Grid.Column="4" Content="Remove" 
                                        Style="{StaticResource DangerButton}"
                                        Click="RemoveButton_Click" Tag="{Binding Id}"/>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

                <!-- Empty State -->
                <TextBlock Grid.Row="1" x:Name="EmptyStateText" 
                           Text="No applications added yet. Click 'Add Application' to get started."
                           HorizontalAlignment="Center" VerticalAlignment="Center"
                           Foreground="Gray" Visibility="Collapsed"/>
            </Grid>
        </Border>

        <!-- Add New App Section -->
        <Border Grid.Row="2" Background="#F9F9F9" CornerRadius="4" Padding="15" Margin="0,15,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Grid.ColumnSpan="5" Text="Add New Application" 
                           FontWeight="SemiBold" Margin="0,0,0,10"/>

                <TextBox Grid.Row="1" Grid.Column="0" x:Name="ProcessNameTextBox" 
                         Margin="0,0,10,0" Padding="8" 
                         ToolTip="Enter process name (e.g., notepad) or browse for .exe file"/>
                
                <Button Grid.Row="1" Grid.Column="1" Content="Browse..." 
                        Click="BrowseButton_Click" Margin="0,0,10,0" Padding="10,5"/>

                <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="Limit:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="LimitHoursTextBox" Width="40" Text="2" 
                             TextAlignment="Center" Padding="5" VerticalAlignment="Center"/>
                    <TextBlock Text="h" VerticalAlignment="Center" Margin="3,0,8,0"/>
                    <TextBox x:Name="LimitMinutesTextBox" Width="40" Text="0" 
                             TextAlignment="Center" Padding="5" VerticalAlignment="Center"/>
                    <TextBlock Text="m" VerticalAlignment="Center" Margin="3,0,0,0"/>
                </StackPanel>

                <StackPanel Grid.Row="1" Grid.Column="3" Orientation="Horizontal" Margin="0,0,10,0">
                    <TextBlock Text="Warn:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <TextBox x:Name="WarningMinutesTextBox" Width="40" Text="5" 
                             TextAlignment="Center" Padding="5" VerticalAlignment="Center"/>
                    <TextBlock Text="min before" VerticalAlignment="Center" Margin="3,0,0,0"/>
                </StackPanel>

                <Button Grid.Row="1" Grid.Column="4" Content="Add" 
                        Style="{StaticResource PrimaryButton}" Click="AddButton_Click"/>
            </Grid>
        </Border>

        <!-- Settings Footer -->
        <Border Grid.Row="3" Margin="0,15,0,0" Padding="10" Background="#F5F5F5" CornerRadius="4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <CheckBox Grid.Column="0" x:Name="StartWithWindowsCheckBox" 
                          Content="Start with Windows" VerticalAlignment="Center"
                          Checked="StartWithWindowsCheckBox_Changed" 
                          Unchecked="StartWithWindowsCheckBox_Changed"/>

                <TextBlock Grid.Column="1" x:Name="StatusText" 
                           Text="Monitoring active" Foreground="Green"
                           HorizontalAlignment="Center" VerticalAlignment="Center"/>

                <Button Grid.Column="2" Content="Minimize to Tray" 
                        Click="MinimizeToTrayButton_Click" Padding="10,5"/>
            </Grid>
        </Border>
    </Grid>
</Window>
